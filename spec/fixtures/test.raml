#%RAML 1.0
---
title: Test API
baseUri: https://api.example.com/{version}
version: v1

uses:
  common: types/main/article.raml

resourceTypes:
  collectionType: !include resourceTypes/collectionType.raml

traits:
  searchable: !include traits/search.raml
  secured: !include traits/secured.raml

types:
  Article:
    type: common.Article
    properties:
      foo: string

/things:
  type:
    collectionType:
      exampleCollection:
        title: foo
  is: [ secured ]
  get:
    is: [ searchable ]
    responses:
      200:
        description: List of things
        body: common.Article
      404:
        description: Error
        body:
          application/xml:
            type: Article

/articles:
  type:
    collectionType:
      exampleCollection:
        title: bar
