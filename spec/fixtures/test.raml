#%RAML 1.0
---
title: Test API
baseUri: https://api.example.com/{version}
version: v1

mediaType: ["application/json"]

uses:
  common: types/main/article.raml

resourceTypes:
  collectionType: !include resourceTypes/collectionType.raml

traits:
  searchable: !include traits/search.raml
  secured: !include traits/secured.raml

types:
  Article:
    type: common.Article
    properties:
      foo: string

/things:
  is: [ secured ]
  get:
    is: [ searchable ]
    responses:
      200:
        description: List of things
        body: common.Article
      404:
        description: Error
        body:
          application/xml:
            type: Article
            example:
              title: foo
              foo: bar
/books:
  type:
    collectionType:
      exampleCollection:
        title: Books
  /{bookId}:
    get:
      responses:
        200:
          body: BOOK
/authors:
  type:
    collectionType:
      exampleCollection:
        title: Authors
  /{authorId}:
    uriParameters:
      authorId:
        type: integer
    get:
      responses:
        200:
          body: BOOK
/articles:
  type:
    collectionType:
      exampleCollection:
        title: Articles
